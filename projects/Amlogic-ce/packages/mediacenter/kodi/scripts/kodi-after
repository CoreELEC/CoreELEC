BOOT_STATUS=$HOME/.config/boot.status
BOOT_HINT=$HOME/.config/boot.hint

BOOT_STATE="$(cat $BOOT_STATUS 2>/dev/null)"


process_boot_hint()
{

  if [ "${BOOT_STATE}" = "OK" ]; then
    echo "OK" > $BOOT_HINT
  fi

  return 0
}

process_boot_hint

exit 0

