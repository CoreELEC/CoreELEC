. /etc/profile

oe_setup_addon service.hyperion.ng

exec hyperiond --userdata $ADDON_HOME &
echo $! > /run/hyperiond.pid

if [ -f "/usr/bin/Xorg" ]; then
  exec hyperion-x11 &
fi
