  # e.g. ADDITIONAL_DRIVERS="DRIVER1 DRIVER2"
    ADDITIONAL_DRIVERS="$ADDITIONAL_DRIVERS ap6xxx-aml mt7601u-aml mt7603u-aml \
                        qca9377-aml RTL8189ES-aml RTL8189FS-aml RTL8723BS-aml \
