+static void *zalloc(void *x, unsigned items, unsigned size)
+{
+  void *p;
+
+  size *= items;
+  size = (size + ZALLOC_ALIGNMENT - 1) & ~(ZALLOC_ALIGNMENT - 1);
+
+  p = malloc (size);
+  return (p);
