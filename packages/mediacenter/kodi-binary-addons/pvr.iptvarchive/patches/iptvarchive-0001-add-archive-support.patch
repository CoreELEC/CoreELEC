+    time_t offset = tag->startTime + m_iEpgUrlTimeOffset;
+    if (tag->startTime > 0 && offset < timeNow - 5)
+      startTimeUrl = g_ArchiveConfig.FormatDateTime(offset - channel.iTvgShift,
